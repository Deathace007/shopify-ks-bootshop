{% comment %}
  ** CUSTOMIZABLE NAVBAR **
  - Replaces theme color classes with direct custom color settings.
  - Adds extensive customization options for typography, backgrounds, icons, spacing, and more.
{% endcomment %}

{%- style -%}
  #navbar-wrapper-{{ section.id }} {
    {% if section.settings.background_type == 'image' and section.settings.background_image != blank %}
      background-image: linear-gradient(rgba({{ section.settings.overlay_color.red }}, {{ section.settings.overlay_color.green }}, {{ section.settings.overlay_color.blue }}, {{ section.settings.overlay_opacity }}), rgba({{ section.settings.overlay_color.red }}, {{ section.settings.overlay_color.green }}, {{ section.settings.overlay_color.blue }}, {{ section.settings.overlay_opacity }})), url('{{ section.settings.background_image | image_url: width: 2000 }}');
      background-size: cover;
      background-position: center;
    {% elsif section.settings.background_type == 'gradient' and section.settings.background_gradient != blank %}
      background: {{ section.settings.background_gradient }};
    {% else %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
    
    border-top: {{ section.settings.border_top_width }}px solid {{ section.settings.border_color }};
    border-bottom: {{ section.settings.border_bottom_width }}px solid {{ section.settings.border_color }};
    
    {% if section.settings.enable_shadow %}
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    {% endif %}
  }

  /* General Text & Icons */
  #navbar-wrapper-{{ section.id }} {
    color: {{ section.settings.text_color }};
  }
  #navbar-wrapper-{{ section.id }} .nav-link-icon svg {
    fill: {{ section.settings.icon_color }};
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
  }
   #navbar-wrapper-{{ section.id }} .nav-link-icon:hover svg {
    fill: {{ section.settings.icon_hover_color }};
  }

  /* Desktop Menu Links */
  #navbar-desktop .desktop-menu .nav-link {
    font-family: {{ section.settings.desktop_font.family }}, {{ section.settings.desktop_font.fallback_families }};
    font-size: {{ section.settings.desktop_font_size }}px;
    font-weight: {{ section.settings.desktop_font_weight }};
    color: {{ section.settings.desktop_link_color }};
    transition: color 0.3s ease;
  }
   #navbar-desktop .desktop-menu .nav-link:hover {
    color: {{ section.settings.desktop_link_hover_color }};
  }

  /* Cart Count Badge */
  #navbar-wrapper-{{ section.id }} .cart-count-badge {
    background-color: {{ section.settings.cart_badge_bg }};
    color: {{ section.settings.cart_badge_text }};
  }

  /* Offcanvas (Mobile Menu) */
  #offcanvas-menu {
    background-color: {{ section.settings.mobile_menu_bg }};
  }
  #offcanvas-menu .nav-link {
    color: {{ section.settings.mobile_link_color }};
  }
  #offcanvas-menu .nav-link:hover {
    color: {{ section.settings.mobile_link_hover_color }};
  }
{%- endstyle -%}

<navbar-wrapper 
  id="navbar-wrapper-{{ section.id }}"
  style="
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  ">
  {% for block in section.blocks %}
    {% if block.type == 'mobile' %}
      <nav 
        id="navbar-mobile" 
        class="navbar d-desktop-none p-0"
        {{ block.shopify_attributes }}>
        <div 
          class="container"
          style="max-width: {{ block.settings.container_max_width }}px; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
          <div class="row align-items-center">
            <div class="col-5">
              <ul class="nav flex-nowrap">
                <li class="nav-item">
                  <a 
                    class="nav-link nav-link-icon ms-n3"
                    href="#offcanvas-menu" 
                    data-bs-toggle="offcanvas" 
                    aria-controls="offcanvas-menu"
                    aria-label="{{ 'general.accessibility.menu' | t }}"
                    role="button">
                    {% render 'svg-icons', icon: 'menu' %}
                  </a>
                </li>
                {% if shop.customer_accounts_enabled %}
                  <li class="nav-item">
                    <a 
                      class="nav-link nav-link-icon {% if template.name == 'login' or template.name == 'account' %}active{% endif %}" 
                      aria-current="{% if template.name == 'login' or template.name == 'account' %}page{% endif %}" 
                      href="{{ routes.account_url }}"
                      aria-label="{{ 'general.accessibility.account' | t }}">
                      {% render 'svg-icons', icon: 'account' %}
                    </a>
                  </li>
                {% endif %}
              </ul>
            </div>
            <div class="col-8 text-center">
              {% render 'navbar-logo', block: block %}
            </div>
            <div class="col-5">
              <ul class="nav flex-nowrap justify-content-end">
                {% if settings.search %}
                  <li class="nav-item">
                    <a
                      class="nav-link nav-link-icon" 
                      href="#offcanvas-search" 
                      data-bs-toggle="offcanvas"
                      aria-controls="offcanvas-search" 
                      aria-label="{{ 'general.accessibility.search' | t }}"
                      role="button">
                      {% render 'svg-icons', icon: 'search' %}
                    </a>
                  </li>
                {% endif %}
                <li class="nav-item">
                  <a 
                    class="nav-link nav-link-icon me-n3" 
                    href="#offcanvas-cart" 
                    data-bs-toggle="offcanvas" 
                    aria-controls="offcanvas-cart" 
                    aria-label="{{ 'general.accessibility.cart' | t }} {{ cart.item_count }}"
                    role="button">
                    {% render 'svg-icons', icon: 'cart' %}
                    {% render 'cart-count-badge' %}
                  </a>  
                </li>
              </ul>
            </div>
          </div>
        </div> 
      </nav>
    {% else %}
      <nav 
        id="navbar-desktop" 
        class="navbar d-none d-desktop-block p-0"
        {{ block.shopify_attributes }}>
        <div 
          class="container"
          style="max-width: {{ block.settings.container_max_width }}px; padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
          <div
            class="row align-items-center flex-grow-1">
            <div class="col-4">
              {% render 'navbar-logo', block: block %}
            </div>
            <div class="col-10">
              {% render 'navbar-desktop-menu', block: block %}
            </div>
            <div class="col-4">
              {% render 'navbar-desktop-icons', block: block %}
            </div>
          </div>
        </div>
      </nav>
    {% endif %}
  {% endfor %}
</navbar-wrapper>
 
{% for block in section.blocks %}
  {% if block.type == 'mobile' %}
    {% render 'offcanvas-menu', block: block %}
  {% endif %}
{% endfor %}
 
